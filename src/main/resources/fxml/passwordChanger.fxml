<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProfileControl"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="55">
            <Label  text="Enter new password and confirm" textFill="aliceblue" scaleX="4" scaleY="4"/>
            <PasswordField maxWidth="200" promptText="password" fx:id="password"/>
            <PasswordField maxWidth="200" promptText="password" fx:id="password2"/>
            <HBox alignment="CENTER" spacing="30">
                <Button text="confirm" onMouseClicked="#confirmPassword"/>
                <Button text="cancel" onMouseClicked="#cancelPassword"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
