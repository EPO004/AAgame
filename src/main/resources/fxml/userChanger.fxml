<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProfileControl"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="55">
            <Label  text="Enter new username and confirm" textFill="aliceblue" scaleX="4" scaleY="4"/>
            <TextField promptText="username" maxWidth="200" styleClass="TextField" fx:id="username"/>
            <TextField promptText="confirm username" maxWidth="200" styleClass="TextField" fx:id="username2"/>
            <HBox alignment="CENTER" spacing="30">
                <Button text="confirm" onMouseClicked="#confirmUsername"/>
                <Button text="cancel" onMouseClicked="#cancelUsername"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
