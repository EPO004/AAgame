<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginMenuControl"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/style.css">
            <center>
                <VBox alignment="CENTER" spacing="55">
                    <Label  text="Login Menu/Register Menu" textFill="aliceblue" scaleX="4" scaleY="4"/>
                    <Label text="Welcome " fx:id="label" textFill="aliceblue" scaleX="2" scaleY="2"/>
                    <TextField promptText="username" maxWidth="200" styleClass="TextField" fx:id="username"/>
                    <PasswordField maxWidth="200" promptText="password" fx:id="password"/>
                    <HBox alignment="CENTER" spacing="30">
                        <Button text="register" onMouseClicked="#register"/>
                        <Button text="login" onMouseClicked="#login" />
                        <Button text="play as guest" onMouseClicked="#skip"/>
                    </HBox>
                </VBox>
            </center>

</BorderPane>
